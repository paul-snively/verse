{
  "$schema": "vscode://schemas/color-theme",
  "name": "Verse-Dark",

  "editor.renderLineHighlight": "line",
  "editor.occurrencesHighlight": false,
  "editor.selectionHighlight": false,

  "colors": {
    "editor.lineHighlightBackground":      "#12002C",
    "editor.lineHighlightBorder":          "#12002C",
    "editor.background":                   "#000000",
    "editor.foreground":                   "#D4D4D4",
    "editor.inactiveSelectionBackground":  "#3A3D41",
    "editorIndentGuide.background":        "#404040",
    "editorIndentGuide.activeBackground":  "#707070",
    "editor.selectionHighlightBackground": "#ADD6FF26",
    "list.dropBackground":                 "#383B3D",
    "activityBarBadge.background":         "#007ACC",
    "sideBarTitle.foreground":             "#BBBBBB",
    "input.placeholderForeground":         "#A6A6A6",
    "settings.textInputBackground":        "#292929",
    "settings.numberInputBackground":      "#292929",
    "menu.background":                     "#252526",
    "menu.foreground":                     "#CCCCCC",
    "statusBarItem.remoteForeground":      "#FFF",
    "statusBarItem.remoteBackground":      "#16825D"
  },
  "tokenColors": [
    {"scope":"invalid",                    "settings": {"foreground":"#f44747", "fontStyle":""}},
    {"scope":"comment",                    "settings": {"foreground":"#77B06B", "fontStyle":""}},
    {"scope":"constant.language",          "settings": {"foreground":"#569cd6"}},
    {"scope":"constant.numeric",           "settings": {"foreground":"#c2ddb4"}},
    {"scope":"constant.regexp",            "settings": {"foreground":"#646695"}},
    {"scope":"constant.character.escape",  "settings": {"foreground":"#B89047"}},
    {"scope":"string",                     "settings": {"foreground":"#C09077"}},
    {"scope":"string.tag",                 "settings": {"foreground":"#C09077"}},
    {"scope":"string.value",               "settings": {"foreground":"#C09077"}},
    {"scope":"string.regexp",              "settings": {"foreground":"#d16969"}},
    {"scope":"text",                       "settings": {"foreground":"#DFC79F", "fontStyle":"italic"}},
    {"scope":"keyword",                    "settings": {"foreground":"#569cd6"}},
    {"scope":"keyword.control",            "settings": {"foreground":"#569cd6"}},
    {"scope":"keyword.operator",           "settings": {"foreground":"#77AFAF"},"name":"infix or prefix operator"},
    {"scope":"keyword.other.unit",         "settings": {"foreground":"#92a788"},"name":"numeric units"},
    {"scope":"entity.name.function",       "settings": {"foreground":"#e5c2ff"},"name":"defined identifier"},
    {"scope":"variable",                   "settings": {"foreground":"#b9d6ff"},"name":"referenced identifier"},
    {"scope":"path",                       "settings": {"foreground":"#b9d6ff"},"name":"path constant"},
    {"scope":"entity.name.tag",            "settings": {"foreground":"#6F77A6"},"name":"referenced identifier and punctuation in markup tag"},
    {"scope":"keyword.declaration",        "settings": {"foreground":"#8499b7"},"name":"punctuation delimiting definitions"},
    {"scope":"punctuation.definition",     "settings": {"foreground":"#8499b7"},"name":"punctuation delimiting markup and attributes"},
    {"scope":"storage",                    "settings": {"foreground":"#569CD6"}},
    {"scope":"storage.type",               "settings": {"foreground":"#569CD6"}},
    {"scope":"storage.modifier",           "settings": {"foreground":"#569CD6"}},
    {"scope":"emphasis",                   "settings": {                            "fontStyle": "italic"}},
    {"scope":"strong",                     "settings": {                            "fontStyle": "bold"}},
    {"scope":"markup.underline",           "settings": {                            "fontStyle": "underline"}},
    {"scope":"markup.bold",                "settings": {"foreground":"#569cd6",     "fontStyle": "bold"}},
    {"scope":"markup.heading",             "settings": {"foreground":"#569cd6",     "fontStyle": "bold"}},
    {"scope":"markup.italic",              "settings": {                            "fontStyle": "italic"}},
    {"scope":"markup.inserted",            "settings": {"foreground":"#b5cea8"}},
    {"scope":"markup.deleted",             "settings": {"foreground":"#ce9178"}},
    {"scope":"markup.changed",             "settings": {"foreground":"#569cd6"}},
    {"scope":"markup.inline.raw",          "settings": {"foreground":"#ce9178"}},
    {"scope":"header",                     "settings": {"foreground":"#000080"}},
    {"scope":"meta.diff.header",           "settings": {"foreground":"#569cd6"}},
    {"scope":"meta.preprocessor",          "settings": {"foreground":"#569cd6"}},
    {"scope":"meta.preprocessor.string",   "settings": {"foreground":"#ce9178"}},
    {"scope":"meta.preprocessor.numeric",  "settings": {"foreground":"#b5cea8"}}
  ]
}